{
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Database=ecommerce_db;Username=postgres;Password=postgres",
    "Redis": "redis:6379,abortConnect=false"
  },
  "RabbitMQ": {
    "HostName": "rabbitmq",
    "Port": "5672",
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "AutomaticRecoveryEnabled": true,
    "NetworkRecoveryInterval": "00:00:10",
    "RequestedHeartbeat": "00:01:00",
    "PrefetchCount": 1,
    "RetryCount": 3,
    "RetryDelay": "00:00:05"
  },
  "Cache": {
    "UseInMemoryFallback": true
  },
  "Worker": {
    "ProcessingDelay": "00:00:01",
    "MaxConcurrentMessages": 5,
    "EnableRetryMechanism": true
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "RabbitMQ.Client": "Information",
        "ECommerce.Worker": "Debug",
        "ECommerce.Application": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/worker/ecommerce-worker-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentUserName"
    ],
    "Properties": {
      "Application": "ECommerce.Worker",
      "Environment": "Development"
    }
  },
  "HealthChecks": {
    "Worker": {
      "Timeout": "00:00:30",
      "Interval": "00:01:00"
    }
  },
  "Monitoring": {
    "EnableMetrics": true,
    "ServiceName": "ecommerce-worker",
    "ServiceVersion": "1.0.0"
  },
  "FeatureFlags": {
    "EnableAdvancedLogging": true,
    "EnableRetryMechanism": true,
    "EnableDeadLetterQueue": false
  }
}